{
  "compilerOptions": {
    "target": "es2016",
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "outDir": "./dist",
    "jsx": "preserve",
    "skipLibCheck": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "lib": ["ES2021.String"]
  },
  "include": ["**/*.ts", "**/*.tsx", "src/*.json"],
  "exclude": ["node_modules", "dist"]
}
